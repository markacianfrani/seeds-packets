{
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "allowBranch": [
        "main",
        "staging",
        "nectar"
      ]
    }
  },
  "packages": [
    "packets/*"
  ],
  "ignoreChanges": [
    "*.md",
    "build.js",
    "config.json"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent"
}
